<UserControl x:Class="Imagio.Helpdesk.View.Entity.SimpleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" MinWidth="300" />
        </Grid.ColumnDefinitions>
        <Label Grid.Column="0" Grid.Row="0" Margin="2" Content="Наименование" VerticalAlignment="Center" />
        <TextBox Grid.Column="1" Grid.Row="0" Margin="2" VerticalAlignment="Center" 
                 Text="{Binding Model.Name, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" />
    </Grid>
</UserControl>
