<UserControl x:Class="Imagio.Helpdesk.View.Workspace.SoftwareWorkspaceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <DataGrid ItemsSource="{Binding Path=ItemColletion}" 
              SelectedItem="{Binding Path=SelectedItem}"
              AutoGenerateColumns="False"
              IsReadOnly="True">
        <DataGrid.Columns>
            <DataGridTextColumn Binding="{Binding Path=Name}" Header="Наименование" />
            <DataGridTextColumn Binding="{Binding Path=Master.ShortName}" Header="Ответственный специалист" />
            <DataGridTextColumn Binding="{Binding Path=Maker.Name}" Header="Производитель" />
        </DataGrid.Columns>
    </DataGrid>
</UserControl>
